/*财富值*/
.assets::after{
  display: table;
  content: '';
  clear: both;
}
.assets ul{
  display: inline-block;
  width:49%;
  text-align: center;
  padding: 40rpx 2rpx;
  background-color: white;
}
/*广告*/
.advertisement:after {
    display: table;
    content: '';
    clear: both;
}

.advertisement ul {
    width: 49%;
}

.advertisement ul li {
    width: 100%;
}
.advertisement image{
  width: 100%;
  height: 204rpx;
}
/*我的活动等列表*/
.my_list{
  padding-bottom: 0;
  padding-top: 0;
}
/*.my_list li{
  padding: 30rpx 0;
  border-bottom: 1px solid #e4ebf6;
}*/
.list_cell{
  padding: 30rpx 0;
  border-bottom: 1px solid #e4ebf6;
}
.list_cell_icon,.list_cell_text{
  display: inline-block;
  vertical-align:top;
}
/*底部导航样式*/
.leui_navbar {
    position: fixed;
    width: 100%;
    left: 0;
    bottom: 0;
    height: 100rpx;
    background: #FFF;
    border-top: 1px solid #e4ebf6;
}

.leui_navbar .nav_item {
    position: relative;
    display: table-cell;
    height: 100rpx;
    text-align: center;
    vertical-align: middle;
    width: 1%;
    color: #707070;
}

/*.leui_navbar .nav_item span {
    display: block;
    margin: 5px auto;
}*/

.leui_navbar .nav_item .label {
    display: block;
    position: relative;
}
/*导航栏图标样式*/
.leui_navbar_icon{
  width: 40rpx;
  height: 40rpx;
  margin-top: 10rpx;
}
/* 弹框 */

.play_status_box {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99999;
  background: rgba(0, 0, 0, 0.5);
}

.play_popup {
  width: 700rpx;
  height: 500rpx;
  position: fixed;
  z-index: 99999;
  background: #fff;
  top: 50%;
  left: 50%;
  margin-left: -350rpx;
  margin-top: -250rpx;
}

.play_popup .popup_tit {
  text-align: center;
  font-size: 30rpx;
  padding: 40rpx;
}

.play_popup .send_succ_tit {
  background: #4194f0;
  color: #fff;
}

.play_popup .send_succ_tit .pub_btn_close {
  position: absolute;
  width: 60rpx;
  right: 20rpx;
  top: 20rpx;
  font-size: 60rpx;
  font-weight: lighter;
  z-index: 99999;
  background: 0;
  outline: none;
}

.play_popup .send_fail_tit {
  background: #999;
  color: #fff;
}

.play_popup .popup_con {
  text-align: center;
}

.play_popup .popup_con p {
  display: block;
  padding: 100rpx 0 0;
}

.play_popup .btn_view_record {
  display: inline-block;
  width: 260rpx;
  color: #f3f7fd;
  margin: 80rpx auto;
  text-align: center;
  padding: 30rpx 0;
  border-radius: 10rpx;
}

